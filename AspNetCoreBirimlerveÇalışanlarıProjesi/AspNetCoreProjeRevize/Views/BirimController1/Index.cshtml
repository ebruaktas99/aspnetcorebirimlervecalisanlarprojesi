
@using AspNetCoreProjeRevize.Models
@model List<Birim>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<!--Test layoutu kullanır.-->
<br />
<table class="table table-bordered">

    <tr>

        <th>ID</th>
        <th>Birim</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>

    </tr>


    @foreach (var x in Model)
    {
        <tr>

            <td>@x.BirimID</td>
            <td>@x.BirimAd</td>
            <td><a href="/BirimController1/BirimSil/@x.BirimID" class="btn btn-danger">Sil</a></td>
            <td><a href="/BirimController1/BirimGetir/@x.BirimID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/BirimController1/BirimDetay/@x.BirimID" class="btn btn-info">Detaylar</a></td>



        </tr>
    }
</table>

<a href="/BirimController1/YeniBirim/" class="btn btn-success">Yeni Birimi Ekle</a>


